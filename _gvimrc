colo desert 
syntax on
set nu
set textwidth=0
set guifont=Consolas:h13
set encoding=utf-8
set fileencodings=utf-8
set guioptions -=T
set guioptions -=r
set guioptions -=m
set guioptions -=e
set guioptions -=L

" Mudar arquivos temporários de lugar
set directory^=$HOME/vim/tmp//

let g:limelight_default_coefficient = 0.85
let g:table_mode_corner='|'

set autoindent       " Auto-indent new lines
set expandtab        " Use spaces instead of tabs
set shiftwidth=4     " Number of auto-indent spaces
set smartindent      " Enable smart-indent
set smarttab         " Enable smart-tabs
set softtabstop=4    " Number of spaces per Tab
set backspace=indent,eol,start  " Backspace behaviour
set linebreak        " Faz com que a linha quebre e nao mude a numeração
  
set ignorecase       " Busca inteligente
set incsearch        " Busca interativa
set smartcase        " Busca inteligente com maiúsculas
set hlsearch         " Marca todas as ocorrencias  
  
set spelllang=pt  
" Mapeamento
map <F2> :NERDTreeToggle <CR>
map <F3> :echo 'Horas ' . strftime('%c') <CR>
map <F6> :set spell<CR>
map <C-A> :browse confirm e<cr>
map tbl :TableModeToggle<cr>
map <S-F6> ]s  
map <F11> :Goyo 70%x95%<cr>

autocmd GUIEnter * silent! WToggleClean     " para iniciar bonitinho ja 

let g:NERDTreeIndicatorMapCustom = {
    \ "Modified"  : "✹",
    \ "Staged"    : "✚",
    \ "Untracked" : "✭",
    \ "Renamed"   : "➜",
    \ "Unmerged"  : "═",
    \ "Deleted"   : "✖",
    \ "Dirty"     : "✗",
    \ "Clean"     : "✔︎",
    \ 'Ignored'   : '☒',
    \ "Unknown"   : "?"
    \ }
let g:NERDTreeDirArrowExpandable = '►'
let g:NERDTreeDirArrowCollapsible = '▼'

